<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="8dp"
    android:layout_marginBottom="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_faktur_foto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_pusan_7_bintang"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_faktur_text_tanggal" />

        <TextView
            android:id="@+id/list_faktur_text_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:drawableLeft="@drawable/ic_rupiah2"
            android:drawablePadding="8dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="#58dd4e"
            app:layout_constraintBottom_toBottomOf="@+id/list_faktur_text_jumlah"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/list_faktur_text_jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/ic_keranjang"
            android:text="34"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_faktur_foto"
            app:layout_constraintStart_toEndOf="@+id/list_faktur_foto" />

        <TextView
            android:id="@+id/list_faktur_text_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:drawableLeft="@drawable/ic_tanggal"
            android:drawablePadding="8dp"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_faktur_text_nama_outlet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/list_faktur_text_jumlah"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/list_faktur_foto" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>